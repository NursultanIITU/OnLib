<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>load</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>filters.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>servlets.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <servlet-class>servlets.UpdateProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <url-pattern>/update_profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PageServlet</servlet-name>
        <servlet-class>servlets.PageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PageServlet</servlet-name>
        <url-pattern>/load</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModeratorSigninServlet</servlet-name>
        <servlet-class>servlets.ModeratorSigninServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModeratorSigninServlet</servlet-name>
        <url-pattern>/moderator_sign_in</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddAuthorServlet</servlet-name>
        <servlet-class>servlets.AddAuthorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAuthorServlet</servlet-name>
        <url-pattern>/to_add_author</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddCategoryServlet</servlet-name>
        <servlet-class>servlets.AddCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCategoryServlet</servlet-name>
        <url-pattern>/to_add_category</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutMServlet</servlet-name>
        <servlet-class>servlets.LogoutMServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutMServlet</servlet-name>
        <url-pattern>/logoutm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditAuthorServlet</servlet-name>
        <servlet-class>servlets.EditAuthorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditAuthorServlet</servlet-name>
        <url-pattern>/editauthor</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteAuthorServlet</servlet-name>
        <servlet-class>servlets.DeleteAuthorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteAuthorServlet</servlet-name>
        <url-pattern>/deleteauthor</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateAuthorServlet</servlet-name>
        <servlet-class>servlets.UpdateAuthorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateAuthorServlet</servlet-name>
        <url-pattern>/updateauthor</url-pattern>
    </servlet-mapping>

</web-app>